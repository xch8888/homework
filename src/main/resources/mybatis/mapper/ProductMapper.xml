<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xch.boots.mapper.ProductMapper">

    <select id="getProduct" resultType="com.xch.boots.pojo.Product">
        select * from product where id = #{id}
    </select>

    <select id="getAllProduct" resultType="com.xch.boots.pojo.Product">
        select * from product
    </select>
</mapper>
